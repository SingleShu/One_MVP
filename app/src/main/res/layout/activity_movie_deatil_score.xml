<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_movie_deatil_score"
    android:background="@color/light_gray"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:paddingBottom="@dimen/margin_size_20_dp"
    tools:context="com.example.administrator.one_mvp_retrofit_dagger2_glide_rxjava.ui.pagemovie.movieDetail.MovieDetailScoreActivity">
    <com.example.administrator.one_mvp_retrofit_dagger2_glide_rxjava.ui.oneUtils.CusInstrumentPanelView
        android:id="@+id/info"
        android:paddingTop="@dimen/margin_size_10_dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_230_dp"
        app:textColor="@color/black"
        app:textSize="@dimen/text_size_12_sp"
        android:text=""/>
    <TextView
        android:id="@+id/movie_detail_score"
        android:textSize="@dimen/text_size_44_sp"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/info"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
</RelativeLayout>
