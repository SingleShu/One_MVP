<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.one_mvp_retrofit_dagger2_glide_rxjava.ui.welcome.WelcomeFragment">

    <com.example.administrator.one_mvp_retrofit_dagger2_glide_rxjava.ui.oneUtils.GifView
        android:id="@+id/welcome_fragment_iv"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/welcome_fragment_tv"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_size_140_dp"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_20_sp"
        android:padding="@dimen/margin_size_8_dp"
        android:background="@drawable/shape_welcome_btn"
        android:textColor="@color/skyblue"
        android:text="@string/welcome_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
